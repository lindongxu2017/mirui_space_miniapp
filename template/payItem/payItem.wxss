/* template/payItem/payItem.wxss */
@import "/app.wxss";
.info-wrapper {
    padding: 40rpx 30rpx;
}
.order-number {
    margin-bottom: 40rpx;
}
.order-number .text {
    font-size: 26rpx;
    color: #9FA4B1;
}
.order-number .text.status {
    color: #BD263E;
}
.pay-info {
    margin-bottom: 40rpx;
}
.pay-info .avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius: 4rpx;
}
.pay-info .content {
    flex: 1;
    -webkit-flex: 1;
    width: 0;
    padding-left: 30rpx;
}
.pay-info .content .name {
    font-size: 30rpx;
    color: #122236;
}
.pay-info .content .time, .pay-info .content .total {
    font-size: 26rpx;
    color: #9FA4B1;
}
.pay-info .content .total .text {
    color: #BD263E;
}
.operation {
    font-size: 0;
    text-align: right;
}
.operation navigator {
    display: inline-block;
}
.operation .btn {
    display: inline-block;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #9FA4B1;
    border: 2rpx solid #9FA4B1;
    padding: 0 30rpx;
    margin-left: 40rpx;
    border-radius: 4rpx;
}
.operation .btn.active {
    border-color: #1685F7;
    background-color: #1685F7;
    color: #fff;
}
.border-img {
    padding: 0 30rpx;
    font-size: 0;
}
.border-img .img {
    width: 100%;
    height: 24rpx;
}
.look_box{
	position:fixed;
	top:0;
	bottom:0;
	left:0;
	right:0;
	background-color:rgba(0, 0, 0, .3);
	z-index:1000;
}
.look_content{
	width:80%;
	height:80%;
	background:white;
	margin:10%;
	position:relative;
	border-radius:10rpx;
}
.look_content .close{
	position:absolute;
	width:50rpx;
	height:50rpx;
	right:20rpx;
	top:20rpx;
}
.look_content .title{
	height:90rpx;
	line-height:90rpx;
	font-size:34rpx;
	text-align:center;
	font-weight:500;
}
.look_content scroll-view{
	position:absolute;
	width:100%;
	top:90rpx;
	bottom:0;
}
.look_content scroll-view image{
	width:100%;
}