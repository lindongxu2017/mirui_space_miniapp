/* template/messageItem/messageItem.wxss */
@import "/app.wxss";

.message-item {
    background-color: #fff;
    margin-top: 30rpx;
    border-radius: 4rpx;
}
.header-content {
    padding: 36rpx 22rpx;
	line-height:1;
}
.title-wrapper{
	flex: 1;
    -webkit-flex: 1;
	width:0;
}
.dot {
    display: inline-block;
    width: 15rpx;
    height: 15rpx;
    border-radius: 50%;
    margin-right: 22rpx;
}
.title {
    font-size: 30rpx;
    color: #122236;
    font-weight: bold;
    flex: 1;
    -webkit-flex: 1;
	width:0;
}
.time {
    color: #9FA4B1;
    font-size: 26rpx;
}
.body-content {
    padding:24rpx 30rpx;
    font-size: 28rpx;
    color: #122236;
    line-height: 40rpx;
}