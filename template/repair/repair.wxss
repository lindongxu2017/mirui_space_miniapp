/* template/repair/repair.wxss */
@import '/app.wxss';
view {
    font-size: 0;
    box-sizing: border-box;
}
.repair {
    padding: 40rpx 30rpx 0;
}
.content {
    color: #122236;
    font-size: 28rpx;
    padding: 0 5rpx;
	flex:1;
	width:0;
}
.imgs {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    -webkit-align-items: center;
    justify-content: flex-start;
    -webkit-justify-content: flex-start;
    margin-bottom: 20rpx;
    padding: 0 5rpx;
}
.imgs image {
    flex: 1;
    -webkit-flex: 1;
    max-width: 25%;
    height: calc(25vw - 35px);
    height: -webkit-calc(25vw - 35px);
    border-radius: 5rpx;
    margin: 0 5rpx;
}
.imgs image:first-child {
    margin-left: 0;
}
.imgs image:nth-child(4n) {
    margin-right: 0;
}
.cell {
    margin-bottom: 20rpx;
}
.cell .date {
    font-size: 26rpx;
    color: #9FA4B1;
}
.cell .cancle {
    font-size: 26rpx;
    color: #BD253E;
}
.border-img {
    width: 100%;
    height: 30rpx;
}
.content_status{
	display: flex;
	margin-bottom: 20rpx;
}
.content_status .status{
	font-size:26rpx;
	color:#BD253E;
	margin-left:30rpx;
}