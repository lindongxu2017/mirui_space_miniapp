/* template/payItem/payItem.wxss */
@import "/app.wxss";
.info-wrapper {
    padding: 40rpx 30rpx 0;
}
.order-number {
    margin-bottom: 40rpx;
}
.order-number .text {
    font-size: 26rpx;
    color: #9FA4B1;
}
.order-number .text.status {
    color: #BD263E;
}
.pay-info {
    margin-bottom: 40rpx;
}
.pay-info .avatar {
    width: 150rpx;
    height: 150rpx;
    border-radius:4rpx;
	overflow:hidden;
	position:relative;
}
.pay-info .avatar image{
	width:100%;
	height:100%;
	display:block;
}
.pay-info .content {
    flex: 1;
    -webkit-flex: 1;
    width: 0;
    padding-left: 30rpx;
}
.pay-info .content .name {
    font-size: 30rpx;
    color: #122236;
}
.pay-info .content .time, .pay-info .content .total {
    font-size: 26rpx;
    color: #9FA4B1;
}
.pay-info .content .total .text {
    color: #BD263E;
}
.operation {
    font-size: 0;
    text-align: right;
}
.operation .btn {
    display: inline-block;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #9FA4B1;
    border: 2rpx solid #9FA4B1;
    padding: 0 30rpx;
    margin-left: 40rpx;
    border-radius: 4rpx;
}
.operation .btn.active {
    border-color: #1685F7;
    background-color: #1685F7;
    color: #fff;
}
.border-img {
    padding: 0 30rpx;
    font-size: 0;
}
.border-img .img {
    width: 100%;
    height: 24rpx;
}
.avatar_btn{
	top:12rpx;
	left:11rpx;
	position:absolute;
	padding:0 12rpx;
	height:35rpx;
	background:#D1A28F;
	border-radius:3rpx;
	color:white;
	font-size:23rpx;
	line-height:35rpx;
}
.avatar_btn.bg{
	background-color:#DB89B0;
}
.tel{
	font-size:26rpx;
	color:#9FA4B1;
}
.address{
	color:#A3A6AD;
	font-size:24rpx;
	white-space:nowrap;
	overflow:hidden;
	word-break:break-all;
	text-overflow:ellipsis;
}
.address image{
	width:27rpx;
	height:27rpx;
	vertical-align:middle;
	margin-right:10rpx;
	margin-top:-2rpx;
}