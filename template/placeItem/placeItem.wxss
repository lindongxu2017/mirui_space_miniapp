/* template/placeItem/placeItem.wxss */
@import '/app.wxss';
.item-info {
    flex: 1;
    -webkit-flex: 1;
    width: 0;
    padding-left: 30rpx;
}
.item-wrapper {
    padding: 35rpx 0;
}
.avatar {
    width: 165rpx;
    height: 165rpx;
    position: relative;
}

.avatar .img {
    width: 100%;
    height: 100%;
    border-radius: 5rpx;
}

.avatar .distance {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    font-size: 24rpx;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.5);
    text-align: center;
    line-height: 45rpx;
    border-bottom-left-radius: 5rpx;
    border-bottom-right-radius: 5rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.name {
    font-size: 34rpx;
    color: #122236;
    font-weight: bold;
}

.capacity {
    font-size: 24rpx;
    color: #A3A6AD;
}

.label-list .item {
    display: inline-block;
    vertical-align: middle;
    line-height: 43rpx;
    padding: 0 10rpx;
    font-size: 24rpx;
    color: #1685F7;
    background-color: #F3F9FF;
    margin-right: 20rpx;
    border-radius: 4rpx;
}

.place .img {
    width: 27rpx;
    height: 27rpx;
}

.place .location {
    flex: 1;
    -webkit-flex: 1;
    width: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
    color: #A3A6AD;
}