@import '/app.wxss';
.item-wrapper {
    padding:30rpx;
    box-sizing: border-box;
}
.item-info {
    flex: 1;
    -webkit-flex: 1;
    width: 0;
    padding-left: 27rpx;
	line-height:1;
}
.avatar {
    width: 120rpx;
    height: 120rpx;
    position: relative;
}

.avatar image {
    width: 100%;
    height: 100%;
    border-radius: 6rpx;
}

.name {
	overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
	word-break:break-all;
    font-size: 34rpx;
    color: #122236;
    font-weight:bold;
	margin-top:13rpx;
	margin-bottom:32rpx;
}


.place image {
    width: 27rpx;
    height: 27rpx;
	display:block;
}

.place .location {
    flex: 1;
    -webkit-flex: 1;
    width: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
	word-break:break-all;
    font-size: 26rpx;
    color: #A3A6AD;
    padding-left: 15rpx;
}