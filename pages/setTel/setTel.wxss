swiper{
	position:fixed;
	width:100%;
	height:100%;
	top:0;
	left:0;
	overflow-y:scroll;
	overflow-x:overflow;
}
.secList{
	border-top:23rpx solid #F8F8F8;
	padding:0 30rpx;
}
.sec{
	display:flex;
	align-items:center;
	font-size:30rpx;
	height:70rpx;
	padding:30rpx 0;
	border-bottom:1rpx solid #eee;
}
.sec .title{
	color:#122236;
	width:140rpx;
	font-weight:600;
}
.sec .title.width{
	width:170rpx;
}
.sec input{
	flex:1;
	width:0;
	height:100%;
}
.sec .btn{
	color:#BD253E;
	margin-left:20rpx;
	padding-left:20rpx;
	height:70rpx;
	line-height:70rpx;
	padding-right:0;
}
.submit{
	margin-top:160rpx;
	height:90rpx;
	text-align:center;
	line-height:90rpx;
	color:white;
	background-color:#1685F7;
	font-size:33rpx;
	border-radius:4rpx;
}