@import "../../wxParse/wxParse.wxss";
@import "/app.wxss";
view {
    box-sizing: border-box;
    font-size: 0;
}
.banner-img {
    width: 100%;
}
.info {
    padding:0 30rpx;
    margin: -100rpx 0 50rpx;
	overflow:visible;
}
.item-info {
    width: 100%;
    padding:30rpx;
    box-shadow:0px 3rpx 9rpx 2rpx rgba(219,219,219,0.49);
    border-radius: 4rpx;
	line-height:1;
    background-color: #fff;
    position: relative;
    z-index: 2;
}

.name {
    font-size: 34rpx;
    color: #122236;
    font-weight: bold;
}

.place image {
    width: 27rpx;
    height: 27rpx;
}
.info .name{
	margin-bottom:32rpx;
	overflow: hidden;
	word-break:break-all;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.place .location {
    flex: 1;
    -webkit-flex: 1;
    width: 0;
   margin-left:15rpx;
    overflow: hidden;
	word-break:break-all;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 26rpx;
    color: #A3A6AD;
}

.cell {
	font-weight:600;
    line-height: 32rpx;
    font-size: 32rpx;
    color: #122236;
    padding-left: 60rpx;
    position: relative;
    background-color: #fff;
}
.cell:before {
    content: "";
    position: absolute;
    width: 4rpx;
    height: 100%;
    background-color: #1685F7;
    left: 30rpx;
    top: 0;
}

.content {
    padding: 30rpx;
    padding-left: 60rpx;
}

.content view {
    font-size: 28rpx;
}
.content image {
    display: block;
    width: 100%!important;
}