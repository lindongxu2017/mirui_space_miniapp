page{
	height:100%;
}
.page{
	position:relative;
	height:100%;
	background-color:#1685F7;
}
.page .bg{
	width:100%;
	height:100%;
	display:block;
}
.content{
	position:absolute;
	left:30rpx;
	right:30rpx;
	top:50%;
	transform:translateY(-50%);
}
.content .icon{
	position:absolute;
	width:24rpx;
	height:24rpx;
	background-color:#1685F7;
	border-radius:50%;
	top:120rpx;
	z-index:1;
}
.content .icon.leftIcon{
	left:-12rpx;
}
.content .icon.rightIcon{
	right:-12rpx;
}
.content .head{
	border-top-left-radius:10rpx;
	border-top-right-radius:10rpx;
	font-weight:600;
	font-size:32rpx;
	line-height:1;
	color:#122236;
	text-align:center;
	padding:50rpx;
	background-color:#F9F9F9;
	position:relative;
}
.content .head:after{
	position:absolute;
	bottom:0;
	height:0;
	content:"";
	left:12rpx;
	right:12rpx;
	border-bottom:1rpx dashed #eee;
}
.content .head .color{
	color:#BD253E;
}
.content .center{
	background-color:white;
	border-bottom-left-radius:10rpx;
	border-bottom-right-radius:10rpx;
	padding-bottom:120rpx;
}
.sec{
	padding:50rpx 0;
	margin:0 50rpx;
	border-bottom:1rpx solid #eee;
	line-height:1;
	display:flex;
}
.sec .title{
	color:#9FA4B1;
	font-size:26rpx;
	margin-bottom:18rpx;
}
.sec .txt{
	color:#122236;
	font-size:33rpx;
	font-weight:600;
}
.sec .left, .sec .right{
	flex:1;
}
.sec .right{
	margin-left:50rpx;
}
.btn{
	margin:130rpx 50rpx 0;
	height:80rpx;
	border:1rpx solid #1685F7;
	border-radius:4rpx;
	text-align:center;
	color:#1685F7;
	font-size:30rpx;
	line-height:76rpx;
	box-sizing:border-box;
}