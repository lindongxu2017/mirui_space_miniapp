/* pages/repairApply/repairApply.wxss */
page {
    background-color: #F4F4F4;
}
view {
    font-size: 0;
    box-sizing: border-box;
}
.field-info {
    padding: 0 30rpx 100rpx;
    background-color: #fff;
}
.cell {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    align-items: centere;
    -webkit-align-items: centere;
    padding: 36rpx 0;
}
.key {
    font-size: 30rpx;
    color: #122236;
    line-height: 1;
    display: inline-block;
}
.value image {
    width: 25rpx;
    height: 25rpx;
}
.value text {
    font-size: 28rpx;
    margin-right: 20rpx;
    line-height: 1;
    vertical-align: middle;
}
.value text, .value image {
    display: inline-block;
    vertical-align: middle;
}
textarea {
    background-color: #F5F6F7;
    border-radius: 5rpx;
    width: 100%;
    height: 215rpx;
    padding: 20rpx;
    color: #333;
    box-sizing: border-box;
    font-size: 28rpx;
}

.picker {
    font-size: 28rpx;
}

.upload-wrapper image.preview {
    width: 100%;
    height: 100%;
    border-radius: 5rpx;
}

.upload-wrapper > view {
    position: relative;
    display: inline-block;
    vertical-align: text-top;
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.upload-wrapper image.del {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 5rpx;
    top: 5rpx;
}

.btn {
    padding: 100rpx 30rpx;
}
.btn view {
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #1685F7;
    border-radius: 4rpx;
    text-align: center;
}