/* pages/trendsRelease/trendsRelease.wxss */
page {
    background-color: #F4F4F4;
}
textarea {
    width: 100%;
}
.field-wrapper {
    padding: 40rpx 30rpx;
    background-color: #fff;
}
textarea {
    font-size: 30rpx;
    color: #9FA4B1;
}
.upload-wrapper image.preview {
    width: 100%;
    height: 100%;
    border-radius: 5rpx;
}

.upload-wrapper > view {
    position: relative;
    display: inline-block;
    vertical-align: text-top;
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.upload-wrapper image.del {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 5rpx;
    top: 5rpx;
}

.btn {
    padding: 100rpx 30rpx;
}
.btn view {
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #1685F7;
    border-radius: 4rpx;
    text-align: center;
}