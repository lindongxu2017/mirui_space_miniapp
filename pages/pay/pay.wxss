/* pages/pay/pay.wxss */
@import '/app.wxss';

view {
    font-size: 0;
    box-sizing: border-box;
}
.info-wrapper {
    padding: 0 30rpx;
}

.item-info {
    flex: 1;
    -webkit-flex: 1;
    width: 0;
    padding-left: 30rpx;
}
.item-wrapper {
    padding: 35rpx 0;
}
.avatar {
    width: 165rpx;
    height: 165rpx;
    position: relative;
}

.avatar .img {
    width: 100%;
    height: 100%;
    border-radius: 5rpx;
}


.name {
    font-size: 34rpx;
    color: #122236;
    font-weight: bold;
}
.place .img {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
	margin-top:5rpx;
}
.place .location {
    flex: 1;
    -webkit-flex: 1;
    width: 0;
	overflow:hidden; 
	text-overflow:ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2; 
	word-break:break-all;
    font-size: 26rpx;
    color: #A3A6AD;
	max-height:68rpx;
}
.cell {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
    align-items: centere;
    -webkit-align-items: centere;
    padding: 36rpx 0;
}
.key {
    font-size: 30rpx;
    color: #122236;
    line-height: 1;
    display: inline-block;
    font-weight: bold;
}
.value image {
    width: 25rpx;
    height: 25rpx;
}
.value text {
    font-size: 30rpx;
    color: #9FA4B1;
    margin-right: 20rpx;
    vertical-align: middle;
    line-height: 1;
}
.value text, .value image {
    display: inline-block;
    vertical-align: middle;
}
.coupon {
    padding: 0 30rpx;
}
.border-img {
    width: 100%;
    height: 24rpx;
}
.pay-way {
    padding: 0 30rpx;
}
.pay-way .title {
    font-size: 32rpx;
    color: #122236;
    padding: 55rpx 0 35rpx;
    font-weight: bold;
}

.van-cell {
    padding-left: 0!important;
    padding-right: 0!important;
}
.van-cell__title {
    font-size: 30rpx;
}

.left-icon {
    width: 44rpx;
    height: 44rpx;
    margin-right: 25rpx;
}

.btn-wrapper {
    padding: 88rpx 30rpx;
}

.btn-wrapper .btn {
    line-height: 80rpx;
    font-size: 30rpx;
    color: #FFFFFF;
    background-color: #1685F7;
    text-align: center;
    border-radius: 4rpx;
}
.public-wraper {
    padding: 0 30rpx;
}
.public-wraper .content {
    padding: 30rpx;
    background-color: #F9F9F9;
    border: 5rpx solid #E9EBED;
}
.content .company {
    font-size: 32rpx;
    color: #122236;
    margin-bottom: 30rpx;
}
.content .text {
    font-size: 26rpx;
    color: #9FA4B1;
    margin-bottom: 10rpx;
}
.content .tips {
    font-size: 24rpx;
    color: #BD253E;
}

.upload-wrapper {
    margin: 30rpx 0;
}
.upload-wrapper image.preview {
    width: 100%;
    height: 100%;
    border-radius: 5rpx;
}

.upload-wrapper > view {
    position: relative;
    display: inline-block;
    vertical-align: text-top;
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.upload-wrapper image.del {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 5rpx;
    top: 5rpx;
}