.swiper-wrapper {
    margin: 30rpx 30rpx 0;
	overflow: hidden;
    border-radius:5rpx;
}
.ad-wrapper swiper {
    height: 130rpx;
}

.access-list {
    padding: 40rpx 0 0;
    background-color: #fff;
}
.access-item {
    display: inline-block;
    width: 25%;
    text-align: center;
    margin-bottom: 40rpx;
    background-color: #fff;
}
.access-item image {
    width: 88rpx;
    height: 88rpx;
    margin-bottom: 10rpx;
}
.access-item view {
    font-size: 26rpx;
    color: #6A7279;
}
.activity {
    padding: 0 30rpx;
}
.activity image {
    width: 100%;
    height: 130rpx;
    border-radius: 5rpx;
}

.ad-wrapper {
    padding: 10rpx 30rpx 40rpx;
}
.ad-wrapper image {
    width: 100%;
    height: 100%;
    border-radius: 4rpx;
}

.van-cell__title.van-cell__title {
    font-size: 38rpx;
    color: #333;
    font-weight: bold;
}
.van-cell__value.van-cell__value {
    font-size: 26rpx;
    color: #D0D0D0;
}
.arrow {
    width: 24rpx;
    height: 24rpx;
}
.van-cell__value {
    margin-right: 8rpx;
}