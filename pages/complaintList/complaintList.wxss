page {
    padding-bottom: 160rpx;
	background-color:#f5f5f5;
}
view {
    font-size: 0;
    box-sizing: border-box;
}
.btn {
    position: fixed;
    width: 100%;
    padding: 20rpx 30rpx;
    background-color: #fff;
    left: 0;
    bottom: 0;
    border-top: 1px solid #DCDCDC;
}
.btn view {
    line-height: 80rpx;
    font-size: 30rpx;
    color: #fff;
    background-color: #1685F7;
    border-radius: 4rpx;
    text-align: center;
}
.list{
	padding:0 30rpx 30rpx;
}
.item{
	margin-top:30rpx;
	border-radius:8rpx;
	padding:20rpx 30rpx;
	background-color:white;
}
.item .time{
	font-size:24rpx;
	color:#aaa;
	margin-bottom:10rpx;
}
.item .content{
	color:#333;
	font-size:30rpx;
	word-wrap:break-word;
}