page{
	background-color:#F4F4F4;
}
.coupon_list{
	padding:30rpx 30rpx 1rpx;
}
.coupon_item{
	position:relative;
	overflow:hidden;
	margin-bottom:30rpx;
}
.coupon_item image{
	width:100%;
	display:block;
}
.coupon_hint{
	position:absolute;
	top:10rpx;
	right:-28rpx;
	background-color:#BD253E;
	color:white;
	font-size:20rpx;
	text-align:center;
	height:40rpx;
	line-height:42rpx;
	width:120rpx;
	transform:rotate(44deg);
}
.coupon_content{
	position:absolute;
	width:100%;
	height:100%;
	top:0;
	left:0;
	display:flex;
	align-items:center;
	line-height:1;
}
.coupon_price{
	color:#1685F7;
	font-weight:600;
	font-size:68rpx;
	padding-left:80rpx;
	display:flex;
	align-items:center;
	width:220rpx;
}
.coupon_price .symbol{
	font-size:30rpx;
	font-weight:initial;
	margin-top:20rpx;
}
.coupon_title_time{
	width:390rpx;
}
.coupon_title{
	color:#122236;
	font-size:40rpx;
	font-weight:600;
	margin-bottom:20rpx;
}
.coupon_time{
	color:#9FA4B1;
	font-size:25rpx;
}