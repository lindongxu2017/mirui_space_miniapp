@import "/app.wxss";
page {
    position: relative;
    width: 100%;
    min-height: 100%;
}
.info-wrapper {
    padding: 23rpx 30rpx 50rpx;
    background-color: #fff;
}
.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.content {
    flex: 1;
    -webkit-flex: 1;
    padding-left: 40rpx;
}

.content .name {
    font-size: 36rpx;
    font-weight: bold;
    color: #122236;
    letter-spacing: 2rpx;
}
.company-name {
    font-size: 28rpx;
    color: #122236;
}
.num-wrapper {
    padding: 0 30rpx;
    position: relative;
    font-size: 0;
    background-color: #fff;
}
.num-wrapper .bg {
    width: 100%;
    height: 100rpx;
}
.num-wrapper .num-text {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
	line-height:100rpx;
}
.num-wrapper .item {
    font-size: 34rpx;
    color: #FFFFFF;
}
.num-wrapper .unit {
    font-size: 24rpx;
    margin-left: 10rpx
}

.link-wrapper {
    background-color: #fff;
	padding-top:16rpx;
}

.link-icon {
    width: 38rpx;
    height: 38rpx;
    margin-right: 38rpx;
}
.link-wrapper .van-cell--large{
	padding-top:30rpx;
	padding-bottom:30rpx;
}
.link-wrapper .van-icon{
	vertical-align:middle;
}
.setStaff{
	padding:30rpx 0;
	text-align:center;
	font-size:34rpx;
}

.share-wrapper {
    position: relative;
}
.share-btn {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    opacity: 0;
}